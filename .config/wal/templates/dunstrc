[global]
    # Show multiple notifications in the same box
    separator_height = 2

    follow = mouse

    # Offset from the origin
    offset = 20x25

    # Add vertical padding to the inside of the notification
    padding = 16

    # Add horizontal padding for when the text gets long enough
    horizontal_padding = 16

    gap_size = 4
    corner_radius = 10

    # The frame color and width of the notification
    frame_color = "{color4}"
    frame_width = 2

    # How long a user needs to be idle for sticky notifications
    idle_threshold = 120

    # Font and typography settings
    font = NotoSansCJK-Light 11
    alignment = center
    word_wrap = yes

    # Format for how notifications will be displayed
    # Usage: `notify-send 'Title' 'Summary'`
    format = "<b>%s</b>: %b"

    # Allow some HTML tags like <i> and <u> in notifications
    markup = full

    # Maximum number of notification (0 means no limit)
    notification_limit = 15

    # Show age of message if message is older than show_age_threshold
    # seconds.
    # Set to -1 to disable.
    show_age_threshold = 60

    ### Progress bar ###

    # Turn on the progess bar. It appears when a progress hint is passed with
    # for example dunstify -h int:value:12
    progress_bar = true

    # Set the progress bar height. This includes the frame, so make sure
    # it's at least twice as big as the frame width.
    progress_bar_height = 10

    # Set the frame width of the progress bar
    progress_bar_frame_width = 1

    # Set the minimum width for the progress bar
    progress_bar_min_width = 150

    # Set the maximum width for the progress bar
    progress_bar_max_width = 300

    # Corner radius for the progress bar. 0 disables rounded corners.
    progress_bar_corner_radius = 1

    # Set icon theme (only used for recursive icon lookup)
    icon_theme = "Tela-pink-dark, breeze-dark, Adwaita"
    # You can also set multiple icon themes, with the leftmost one being used first.
    # icon_theme = "Adwaita, breeze"

    # Recursive icon lookup. You can set a single theme, instead of having to
    # define all lookup paths.
    enable_recursive_icon_lookup = true
		
    # Scale small icons up to this size, set to 0 to disable. Helpful
    # for e.g. small files or high-dpi screens. In case of conflict,
    # max_icon_size takes precedence over this.
    min_icon_size = 44

    # Scale larger icons down to this size, set to 0 to disable
    max_icon_size = 46

    # Paths to default icons (only neccesary when not using recursive icon lookup)
    icon_path = /usr/share/icons/breeze-dark/devices/24:/usr/share/icons/breeze-dark/status/24

    layer = top

    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[skip-display]
    # This notification will not be displayed, but will be included in the history
    summary = "gtklock"
    skip_display = yes

# Set the background and foreground (text) color for all notifications
[urgency_low]
    background = "{background}"
    foreground = "{foreground}"

[urgency_normal]
    background = "{background}"
    foreground = "{foreground}"

[urgency_critical]
    background = "{background}"
    foreground = "{foreground}"

[fullscreen_show_critical]
    msg_urgency = critical
    fullscreen = show

[experimental]
    # Calculate the dpi to use on a per-monitor basis.
    # If this setting is enabled the Xft.dpi value will be ignored and instead
    # dunst will attempt to calculate an appropriate dpi value for each monitor
    # using the resolution and physical size. This might be useful in setups
    # where there are multiple screens with very different dpi values.
    per_monitor_dpi = false

# vim:ft=cfg
